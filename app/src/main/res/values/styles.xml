<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarAppTheme</item>
        <item name="android:selectableItemBackground">@color/lightPurple</item>
        <item name="android:textColorHighlight">@color/lightPurple</item>
        <item name="android:alertDialogTheme">@style/Theme_LupusMate_Dialog_Alert</item>

    </style>

    <style name="DialogWindowTitle.LupusMate" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.LupusMate.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.LupusMate.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/darkPurple</item>
    </style>
        <style name="Widget.LupusMate.Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless">
            <item name="android:textColor">@color/darkPurple</item>
        </style>


        <style name="LupusMate.ButtonBar.AlertDialog" parent="@android:style/Holo.ButtonBar.AlertDialog">
            <item name="android:background">@color/white</item>
        </style>

    <!-- ActionBar styles -->
    <style name="ActionBarAppTheme"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:logo">@drawable/actionbar_logo</item>
    </style>

    <!-- Font styles-->
    <style name="PurpleFont">
        <item name="android:textColor">@color/darkPurple</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GreyFont">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <!-- Mood Rating Bar-->
    <style name="MoodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/mood_rating_bar</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
<!-- new version-->

</resources>
