<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/darkPurple" />
            <gradient
                android:type="linear"
                android:startColor="@color/lightPurple"
                android:endColor="@color/darkPurple"
                android:angle="45"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/darkPurple" />
            <solid android:color="@color/darkPurple"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/darkPurple" />
            <gradient android:angle="-90" android:startColor="@color/lightPurple" android:endColor="@color/darkPurple" />
        </shape>
    </item>
</selector>