<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_layout_padding">
    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:layout_centerHorizontal="true"
        android:id="@+id/space4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/a_add_medicine_instructions"
        android:id="@+id/textView5"
        android:layout_below="@+id/space4"
        android:layout_alignLeft="@+id/space4"
        android:layout_alignStart="@+id/space4"
        style="@style/PurpleFont"/>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/space5" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space5"
        android:padding="@dimen/panel_padding_compact"
        android:background="@drawable/panel_background">

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_row="0"
            android:layout_column="0">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:id="@+id/radioButton"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night"
                android:id="@+id/radioButton2" />
        </RadioGroup>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:text="@string/a_add_medicine_instruction_hint"
            android:singleLine="true"
            style="@style/GreyFont" />
    </GridLayout>
</RelativeLayout>