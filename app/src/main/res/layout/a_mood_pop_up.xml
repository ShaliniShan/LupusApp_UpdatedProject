<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_mood_alert_pop_up_text1"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        style="@style/PurpleFont"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_mood_alert_pop_up_text2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        style="@style/PurpleFont"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:numStars="4"
        android:stepSize="1"
        android:layout_gravity="center_horizontal" />

    <View android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:background="#cc33ff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <Spinner
            android:layout_width="116dp"
            android:layout_height="59dp"
            android:id="@+id/later"
            android:entries="@array/minute"
            android:paddingLeft="20dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/snooze"
            android:src="@drawable/ic_action_snooze"
            android:paddingLeft="50dp"/>

        <ImageView
            android:id="@+id/skipbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_skip"
            android:paddingLeft="50dp"
            />
    </LinearLayout>



    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Snooze"
        android:id="@+id/textView13"
        android:layout_gravity="right"
        style="@style/PurpleFont"
        android:paddingLeft="155dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Skip"
            android:id="@+id/textView14"
            android:layout_gravity="right"
            android:paddingLeft="44dp"
            style="@style/PurpleFont"/>
</LinearLayout>

</LinearLayout>