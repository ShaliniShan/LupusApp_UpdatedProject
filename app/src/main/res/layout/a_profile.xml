<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.umb.cs682.projectlupus.activities.common.Profile"
    android:id="@+id/profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please fill the information below"
        android:id="@+id/textView5"
        android:layout_alignLeft="@+id/space2"
        android:layout_alignStart="@+id/space3"
        style="@style/GreenFont"/>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/panel_background"
        android:id="@+id/tableLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/personal_info"
            android:layout_marginStart="@dimen/main_layout_padding"
            android:layout_marginLeft="@dimen/main_layout_padding"
            android:layout_marginRight="@dimen/main_layout_padding"
            android:layout_marginTop="@dimen/main_layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/textView"
                android:layout_column="0"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_column="1" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Age"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"/>

            <Spinner
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"
                android:layout_marginRight="@dimen/main_layout_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/age"
                android:layout_column="1"
                android:spinnerMode="dropdown"
                android:entries="@array/age"/>
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gender"
                android:id="@+id/textView6"
                android:layout_column="0"
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"/>

            <RadioGroup
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"
                android:layout_marginRight="@dimen/main_layout_padding"
                android:orientation='horizontal'>>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/male"
                    android:text="Male"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/female"
                    android:text="Female"
                    />
            </RadioGroup>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/main_layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ethnicity"
                android:id="@+id/ethnicity"
                android:layout_column="0"
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/Ethnicity"
                android:layout_column="1"
                android:spinnerMode="dropdown"
                android:entries="@array/ethnicity"
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"
                android:layout_marginRight="@dimen/main_layout_padding"/>
        </TableRow>

    </TableLayout>





</RelativeLayout>


