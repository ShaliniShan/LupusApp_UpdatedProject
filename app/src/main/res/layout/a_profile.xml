<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.umb.cs682.projectlupus.activities.common.Profile"
    android:id="@+id/profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please fill the information below"
        android:id="@+id/textView5"
        android:layout_alignLeft="@+id/space2"
        android:layout_alignStart="@+id/space3"
        style="@style/PurpleFont"/>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/panel_background"
        android:id="@+id/tableLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/personal_info"
            android:layout_marginStart="@dimen/main_layout_padding"
            android:layout_marginLeft="@dimen/main_layout_padding"
            android:layout_marginRight="@dimen/main_layout_padding"
            android:layout_marginTop="@dimen/main_layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/textView"
                android:layout_column="0"
                />

            <EditText
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/et_username"
                android:layout_column="1"
                android:hint="@string/a_profile_name_hint"
                android:backgroundTint="@color/darkPurple"
                android:layout_marginRight="169dp"/>


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Age"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"/>

            <Spinner
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"
                android:layout_marginRight="@dimen/main_layout_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/sp_age"
                android:layout_column="1"
                android:spinnerMode="dialog"
                android:entries="@array/arr_age"
                android:backgroundTint="@color/darkPurple"/>
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gender"
                android:id="@+id/textView6"
                android:layout_column="0"
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"/>

            <RadioGroup
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"
                android:layout_marginRight="@dimen/main_layout_padding"
                android:orientation='horizontal'
                android:id="@+id/rg_gender">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_male"
                    android:text="Male"
                    android:checked="true"
                    android:buttonTint="@color/darkPurple"

                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_female"
                    android:text="Female"
                    android:buttonTint="@color/darkPurple"
                    />
            </RadioGroup>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/main_layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ethnicity"
                android:id="@+id/ethnicity"
                android:layout_column="0"
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/sp_ethnicity"
                android:layout_column="1"
                android:spinnerMode="dialog"
                android:entries="@array/ethnicity"
                android:layout_marginStart="@dimen/main_layout_padding"
                android:layout_marginLeft="@dimen/main_layout_padding"
                android:layout_marginRight="@dimen/main_layout_padding"/>
        </TableRow>

    </TableLayout>





</RelativeLayout>


